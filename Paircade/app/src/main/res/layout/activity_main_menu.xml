<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="30dp"
        android:onClick="goToChooseGame"
        android:text="Create Lobby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainMenuPlayerLabel" />

    <Button
        android:id="@+id/button2"
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="36dp"
        android:onClick="goToJoinLobby"
        android:text="Join Lobby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="162dp"
        android:layout_height="21dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="212dp"
        android:text="Welcome Player: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mainMenuPlayerLabel"
        android:layout_width="216dp"
        android:layout_height="22dp"
        android:layout_marginStart="94dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>